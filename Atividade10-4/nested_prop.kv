<StatusIndicator>:
    orientation: 'vertical'
    Label:
        text: "Status: " + ("Ativo" if root.is_active else "Inativo")
        color: (0, 1, 0, 1) if root.is_active else (1, 0, 0, 1)
        font_size: 24

<MainControlWidget>:
    orientation: 'vertical'
    padding: 20
    spacing: 20

    Button:
        text: "Alternar Status"
        size_hint_y: None
        height: '50dp'
        on_press: root.toggle_status()
